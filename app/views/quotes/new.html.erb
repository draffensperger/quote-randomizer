<%= form_for(@quote) do |f| %>
  <div class="form-group">
    <%= f.label :text %><br>
    <%= f.text_area :text, rows: 4, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :author %><br>
    <%= f.text_field :author, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Create', class: 'btn btn-lg btn-primary' %>
    <%= link_to 'Cancel', quotes_path, class: 'btn btn-default btn-lg' %>
  </div>
<% end %>
